<%- include("partials/header") -%>

<div class="content">
    <div class="container my-4 contact_section_one">
        <div class="row">
            <div class="col-md-6 col-sm-12 justify-content-end mt-md-0 mt-4 h-100">
                <div class="contact ms-0 ms-md-5">
                    <h2 class="mb-4">Login</h2>
                    <form action="/login" method="POST">
                        <div class="mb-3">
                            <label for="logInEmail">Email</label>
                            <input type="email" class="form-control" name="username" id="logInEmail"
                                placeholder="yourname@example.com" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
                                title="Please write correct email address." required>
                        </div>
                        <div class="mb-3">
                            <label for="logInPwd">Password</label>
                            <input type="password" id="logInPwd" class="form-control" name="password"
                                placeholder="Ab@12cde" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required
                                title="Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters">
                        </div>

                        <button type="submit" class="butn">Submit</button>
                    </form>
                </div>
            </div>

            <div class="col-md-6 col-sm-12 justify-content-end mt-md-0 mt-4 h-100 overflow-hidden">
                <div class="h-100">
                    <img src="../img/mirage-logged-out.png" alt="" class="h-100 w-100">
                </div>
            </div>
        </div>
    </div>
</div>


<%- include("partials/footer") -%>
