<%- include("partials/header") -%>

<div class="content">
    <section class="service p-5">
        <div class="container text-center">
            <h2 class="mb-3 d-block m-auto">Our Products</h2>

            <div class="row mt-5 justify-content-center">
                <% if(categorylist) { %>
                <% categorylist.forEach((product) =>{ %>
                <div class="service_block col-lg-3 col-md-4 col-sm-6 col-xs-12 mb-3 mb-md-0">
                    <div class="p-4">
                        <div class="product_img">
                            <img src="./uploads/<%= product.categoryLogo%>" alt="">
                        </div>
                        <h4 class="mt-3"><%= product.categoryName %></h4>
                        <a href="/products/<%= product.categoryName %>">view more</a>
                    </div>
                </div>
                <% }); %>
                <% } %>
                <% if(!categorylist.length){%>
                <p>No products available. <a href="/compose">Add Products.</a></p>
                <% } %>
            </div>
        </div>
    </section>
</div>



<%- include("partials/footer") -%>